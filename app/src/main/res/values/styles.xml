    <style name="NoMessagesText">
        <item name="android:textColor">@color/rain_gray</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="ComposeMessageEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_norm</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="ComposeMessageBodyText" parent="ComposeMessageEditText">
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine|textLongMessage|textCapSentences</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="MessagePasswordEditTextBase" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/message_spacing</item>
        <item name="android:paddingRight">@dimen/message_spacing</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/lead_gray</item>
        <item name="android:textColorHint">@color/chateau_gray</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="MessagePasswordEditText" parent="MessagePasswordEditTextBase">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="MessagePasswordHintEditText" parent="MessagePasswordEditTextBase">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="MessagePasswordEditText.Dialog" parent="MessagePasswordEditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/v3_edittext_inverted</item>
        <item name="android:layout_marginLeft">@dimen/fields_default_space</item>
        <item name="android:layout_marginRight">@dimen/fields_default_space</item>
        <item name="android:layout_marginTop">@dimen/fields_default_space_small</item>
        <item name="android:layout_marginBottom">@dimen/fields_default_space_small</item>
    </style>

    <style name="MessageExpirationText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/message_spacing</item>
        <item name="android:paddingRight">@dimen/message_spacing</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/lead_gray</item>
        <item name="android:textColorHint">@color/chateau_gray</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="MessageRecipientBase">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="MessageRecipientView" parent="MessageRecipientBase">
        <item name="android:background">@null</item>
        <item name="android:inputType">text|textNoSuggestions|textMultiLine</item>
        <item name="android:textColor">@color/text_norm</item>
        <item name="android:lineSpacingExtra">@dimen/padding_m</item>
    </style>

    <style name="AttachmentText">
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="SettingsItemPadding">
        <item name="android:background">@drawable/settings_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/message_spacing</item>
        <item name="android:layout_marginLeft">@dimen/fields_default_space</item>
        <item name="android:layout_marginRight">@dimen/fields_default_space_small</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="SettingsHeadingText">
        <item name="android:textColor">@color/lead_gray</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="fontName">Roboto-Regular.ttf</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="AppTheme.Dialog.Labels" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/labels_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="PopupTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="CustomKeyboardButton">
        <item name="android:textAppearance">@style/Proton.Text.Default</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/settings_pin_key_button_font</item>
        <item name="android:background">@drawable/keyboard_button_background</item>
        <item name="android:layout_width">@dimen/settings_pin_key_button_size</item>
        <item name="android:layout_height">@dimen/settings_pin_key_button_size</item>
        <item name="android:layout_marginStart">@dimen/settings_pin_key_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_pin_key_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/padding_m</item>
        <item name="android:layout_marginTop">@dimen/padding_m</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextColor">?proton_text_weak</item>
        <item name="tabSelectedTextColor">?proton_text_norm</item>
    </style>

    <style name="CustomSearchView" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CACACA</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawableStart">@drawable/ic_proton_magnifier</item>
        <item name="android:drawableLeft">@drawable/ic_proton_magnifier</item>
        <item name="android:drawablePadding">@dimen/fields_default_space_small</item>
        <item name="android:background">@drawable/search_edittext_shape</item>
    </style>

    <!-- endregion -->

</resources>
