    </style>

    <style name="MessageToggleDetailsText">
        <item name="android:textColor">@color/icon_purple</item>
        <item name="android:textSize">@dimen/h6</item>
    </style>

    <style name="MessageDetailsTextBase">
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="MessageDetailsPrefixText" parent="MessageDetailsTextBase">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/ice_gray</item>
    </style>

    <style name="MessageDetailedDateText" parent="MessageDetailsTextBase">
        <item name="android:textColor">@color/ice_gray</item>
    </style>

