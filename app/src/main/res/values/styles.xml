        <item name="android:textSize">@dimen/h4</item>
        <item name="android:background">@drawable/new_label_edittext</item>
    </style>

    <style name="LabelEditText" parent="V3EditText">

    </style>

    <style name="DrawerItemText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DrawerNameText.Black" parent="DrawerNameText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DrawerNameText.Red" parent="DrawerNameText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="DrawerEmailAddressText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DrawerEmailAddressText.Black" parent="DrawerEmailAddressText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DrawerEmailAddressText.Red" parent="DrawerEmailAddressText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="MessagePrimaryText">
        <item name="android:textColor">@color/rain_gray</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MessagePrimaryText_Read" parent="MessagePrimaryText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MessagePrimaryText_Unread" parent="MessagePrimaryText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MessageSecondaryText">
        <item name="android:textColor">@color/iron_gray</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MessageSecondaryText_Read" parent="MessageSecondaryText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MessageSecondaryText_Unread" parent="MessageSecondaryText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NoMessagesText">
        <item name="android:textColor">@color/rain_gray</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="MessageTitleText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="MessageSenderPrefixText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/prefix_gray</item>
        <item name="android:textSize">@dimen/h6</item>
    </style>

    <style name="MessageNameText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/name_gray</item>
        <item name="android:textSize">@dimen/h6</item>
    </style>

    <style name="MessageEmailText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/prefix_gray</item>
