<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="@dimen/padding_l">

    <ch.protonmail.android.views.messagesList.SenderInitialView
        android:id="@+id/initials_view_contacts_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_l"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/padding_l"
        android:textAppearance="@style/Proton.Text.Default"
        app:layout_constraintEnd_toStartOf="@+id/image_view_edit_button"
        app:layout_constraintStart_toEndOf="@+id/initials_view_contacts_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/text_view_contact_subtitle"
        style="@style/Proton.Text.DefaultSmall.Weak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/padding_l"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/image_view_edit_button"
        app:layout_constraintStart_toEndOf="@+id/initials_view_contacts_list"
        app:layout_constraintTop_toBottomOf="@+id/text_view_contact_name"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/image_view_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/edit_contact"
        android:focusable="true"
        android:paddingHorizontal="@dimen/padding_l"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_paper_plane"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>
