<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fields_default_space_small_plus"
    android:paddingTop="@dimen/fields_default_space_small_plus">

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/fields_default_space_small"
        tools:src="@drawable/spam"
        tools:tint="@color/rain_gray"/>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/fields_default_space"
        android:paddingRight="@dimen/fields_default_space"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textSize="@dimen/h5"
        android:textAlignment="viewStart"
        tools:text="SPAM"/>

</LinearLayout>
