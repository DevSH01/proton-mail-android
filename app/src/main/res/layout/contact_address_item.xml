<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/fields_default_space_medium"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/address_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ch.protonmail.android.views.CustomFontTextView
            android:id="@+id/address_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/contact_heading"
            android:textSize="16sp"
            app:fontName="Roboto-Light.ttf" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_full_combined"
            style="@style/ContactsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/fields_default_space_small"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/fields_default_space_small"
            android:singleLine="false"
            android:maxLines="4"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>
