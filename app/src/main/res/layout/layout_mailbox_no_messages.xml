<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/Proton.Text.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_xl"
        android:gravity="center"
        android:text="@string/mailbox_no_messages"
        app:drawableTopCompat="@drawable/img_empty_folder" />

    <TextView
        style="@style/Proton.Text.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_l"
        android:text="@string/inbox_this_folder_is_empty" />
</androidx.appcompat.widget.LinearLayoutCompat>
