<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_item_l"
    android:padding="@dimen/padding_l"
    android:orientation="horizontal">

    <!-- Icon -->
    <!-- Content description set in Adapter -->
    <ImageView
        android:id="@+id/parent_picker_folder_icon_image_view"
        android:layout_width="@dimen/size_icon_m"
        android:layout_height="@dimen/size_icon_m"
        android:scaleType="center"
        android:layout_marginEnd="@dimen/padding_l"
        tools:src="@drawable/ic_folder_filled"
        tools:tint="@color/aqua_base"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

    <!-- Name -->
    <TextView
        android:id="@+id/parent_picker_folder_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/Proton.Text.Default"
        android:textColor="@color/text_norm"
        tools:text="@string/inbox" />

</LinearLayout>
